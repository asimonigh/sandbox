<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:clipChildren="false"
    android:clipToPadding="false">

<TextView
    style="@style/TextAppearance.MaterialComponents.Headline4"
    android:id="@+id/main_activity_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Les chats mignons"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:id="@+id/main_activity_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Une app qui sert Ã  rien avec des photos de chats"
        app:layout_constraintTop_toBottomOf="@id/main_activity_title"/>

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/main_activity_card_stack"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_activity_subtitle"
        tools:itemCount="5"
        tools:listitem="@layout/item_cat" />


</androidx.constraintlayout.widget.ConstraintLayout>